<p style="color: green"><%= notice %></p>

<%= render @list %>

<p><strong>Bookmarks</strong></p>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item">
      <strong> <%= "Title:" %> </strong><%=   bookmark.movie.title %>
    </li>
    <li class="list-group-item">
      <strong> <%= "Overview:" %> </strong><%=   bookmark.movie.overview %>
    </li>
    <li class="list-group-item">
      <strong> <%= "Rating:" %> </strong><%=   bookmark.movie.rating %>
    </li>
    <li>
      <strong> <%= "Comment:" %> </strong> <%= bookmark.comment %>
      <%= link_to "Delete",
        bookmark_path(bookmark),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </li>

  <% end %>
</ul>
<br>

<div>
  <%= link_to "Back to lists", lists_path %>
  <%= link_to "Add bookmark", new_list_bookmark_path(@list) %> |
  <%= button_to "Destroy this list", @list, method: :delete %>
</div>
